{
    // Use IntelliSense para saber los atributos posibles.
    // Mantenga el puntero para ver las descripciones de los existentes atributos 
    // Para más información, visite: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "diagnosticLogging": true,
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "program": "${workspaceFolder}/lib/app.js",
            "runtimeArgs": [
                "--exec",
                "babel-node",
            ],
            "restart": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            // "autoAttachChildProcesses": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/lib/index.js --exec babel-node"
        },
        {
            "name": "Attach to node",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 3977
        },
        {
            "type": "node",
            "request": "launch",
            "port": 42894,
            "name": "Nuevo node",
            "program": "${workspaceRoot}/lib/index.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Nodemon",
            "runtimeExecutable": "nodemon",
            "args": ["${workspaceRoot}/lib/index.js"],
            "restart": true,
            "protocol": "inspector",
            "stopOnEntry": false,
            "runtimeArgs": [
                "--nolazy",
                "--require",
                "babel-register"
            ],
            "sourceMaps": true
        },
    ]
}